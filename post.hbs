{{!< default}} {{#post}} <article class="{{post_class}} mx-auto max-w-prose page-spacing">
    {{#if feature_image}}
    <figure class="mb-4">
        <img srcset="{{img_url feature_image size=" s"}} 300w, {{img_url feature_image size="m" }} 600w, {{img_url
            feature_image size="l" }} 1000w, {{img_url feature_image size="xl" }} 2000w"
            sizes="(max-width: 1000px) 400px, 700px" src="{{img_url feature_image size=" m"}}"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
        {{#if feature_image_caption}}
        <figcaption>
            {{feature_image_caption}}
        </figcaption>
        {{/if}}
    </figure>
    {{/if}}
    <h1 class="mb-8 text-5xl font-heading">{{title}}</h1>
    <div class="mx-auto prose">
        {{content}}
    </div>
    <div>
        {{comments}}
    </div>
    </article>
    {{/post}}